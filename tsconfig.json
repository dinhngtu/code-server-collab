{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6", "DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny":true   /* enable all strict type-checking options */
	},
	"include": [
        "./src/**/*"
    ],
	"exclude": [
		"node_modules"
	]
}
